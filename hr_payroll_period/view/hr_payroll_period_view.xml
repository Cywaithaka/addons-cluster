<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="period_schedule_tree_view">
            <field name="name">period.schedule.tree</field>
            <field name="model">hr.payroll.period.schedule</field>
            <field name="arch" type="xml">
                <tree string="Period Schedule Tree">
                    <field name="name" />
                    <field name="type" />
                    <field name="start_date" />
                    <field name="fiscalyear_id" />
                    <field name="employee_category_id" />
                    <field name="paydate_biz_day" />
                </tree>
            </field>       
        </record>

        <record model="ir.ui.view" id="period_schedule_form_view">
            <field name="name">period.schedule.form</field>
            <field name="model">hr.payroll.period.schedule</field>
            <field name="arch" type="xml">
                <form string="Period Schedule Form" version="7.0">
                    <header>
                        <button name="create_period" string="Create Periods" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="type"/>
                            <field name="start_date" />     
                            <field name="fiscalyear_id" widget="selection"/> 
                            <field name="paydate_biz_day" />
                            <field name="employee_category_id" />
                        </group>
                        <separator string="Periods" />
                        <field name="period_ids">
                            <tree string="Periods" create="false" colors="red:state == 'actived'">
                                <field name="name" />
                                <field name="date_start" />
                                <field name="date_end" />
                                <field name="fiscal_period_id" />
                                <field name="state" />
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="period_form_view">
            <field name="name">period.form</field>
            <field name="model">hr.payroll.period</field>
            <field name="arch" type="xml">
                <form string="Period Form" version="7.0">
                    <header>
                         <field name="state" widget="statusbar" statusbar_visible="actived, confirmed, paid, closed" 
                          statusbar_colors='{"cancel":"red"}'/>
                    </header>
                    <sheet>                       
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="period_tree_view">
            <field name="name">period.tree</field>
            <field name="model">hr.payroll.period</field>
            <field name="arch" type="xml">
                <tree string="Period Form" colors="red:state == 'actived'">                    
                    <field name="name"/>
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="fiscal_period_id" />
                    <field name="schedule_id" />
                     <field name="employee_category_id" />
                    <field name="state"/>           
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="payroll_period_wizard">
            <field name="name">payroll.period.wizard</field>
            <field name="model">hr.payroll.period.wizard</field>
            <field name="arch" type="xml">
                <form string="Period Form" version="7.0">
                    <header>
                        <button name="confirm_period" string="Confirm" type="object" class="oe_highlight"/>
                        <field name="state" widget="statusbar" 
                          statusbar_visible="actived, confirmed, paid, closed" 
                          statusbar_colors='{"cancel":"red"}'>
                        </field>
                    </header>
                    <sheet>                                              
                        <h1>
                            <field name="period_id" nolabel="1" />
                        </h1>
                        <group col="4">
                            <group col="2">
                                <field name="start_date" />
                                <field name="end_date" />
                            </group>
                            <group col="2">           
                                <field name="fiscal_period_id" />
                                <field name="employee_category_id" />
                                <field name="schedule_id" />                               
                            </group>
                        </group>                 
                        <separator string="Leaves Summary" />
                        <field name="holiday_ids" widget="one2many_list">
                            <tree colors="red:state == 'refuse';blue:state == ' draft';black:state in ('confirm','validate','validate1')" string="Leaves Summary">
                                <field name="employee_id"/>
                                <field name="category_id" invisible="1"/>
                                <field name="department_id" invisible="1"/>
                                <field name="type"/>
                                <field name="name"/>
                                <field name="number_of_days" string="Number of Days" sum="Remaining Days"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="holiday_status_id"/>
                                <field name="manager_id" invisible="1"/>
                                <field name="user_id" invisible="1"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>