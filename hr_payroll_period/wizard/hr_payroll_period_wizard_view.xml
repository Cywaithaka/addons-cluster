<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="payroll_period_wizard">
            <field name="name">payroll.period.wizard</field>
            <field name="model">hr.payroll.period.wizard</field>
            <field name="arch" type="xml">
                <form string="Period Form" version="7.0">
                    <header>
                        <button name="show_step1" string="Step 1: Leaves" type="object" attrs="{'invisible':[('step','=','step1')]}" />
                        <button name="show_step2" string="Step 2: Payslips" type="object" attrs="{'invisible':[('step','=','step2')]}" />
                        <button name="show_step3" string="Step 3: Payments" type="object" attrs="{'invisible':[('step','=','step3')]}" />
                        <button name="generate_payslips" string="Generate Payslips" type="object" class="oe_highlight" attrs="{'invisible':[('step','!=','step2')]}" />
                        <button name="confirm_payslips" string="Confirm" type="object" class="oe_highlight" states="active" />
                        <field name="state" widget="statusbar"
                          statusbar_visible="actived, confirmed, paid, closed" 
                          statusbar_colors='{"cancel":"red"}'>
                        </field>
                    </header>
                    <sheet>
                        <h1>
                            <field name="step" nolabel="1" />
                        </h1>                                                      
                            <group col="4">                            
                                <group col="2">
                                    <field name="period_id" />
                                    <field name="start_date" />
                                    <field name="end_date" />
                                </group>
                                <group col="2">           
                                    <field name="fiscal_period_id" />
                                    <field name="schedule_id" />                               
                                </group>
                            </group>
                            <div attrs="{'invisible': [('step','!=','step1')]}">               
                                <separator string="Leaves Summary" />
                                <field name="holiday_ids" widget="one2many_list">
                                    <tree colors="red:state == 'refuse';blue:state == ' draft';black:state in ('confirm','validate','validate1')" 
                                        string="Leaves Summary">
                                        <field name="employee_id"/>
                                        <field name="category_id" invisible="1"/>
                                        <field name="department_id" invisible="1"/>
                                        <field name="type"/>
                                        <field name="name"/>
                                        <field name="number_of_days" string="Number of Days" sum="Remaining Days"/>
                                        <field name="date_from"/>
                                        <field name="date_to"/>
                                        <field name="holiday_status_id"/>
                                        <field name="manager_id" invisible="1"/>
                                        <field name="user_id" invisible="1"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </div>
                            <div attrs="{'invisible': [('step','!=','step2')]}"> 
                                <separator string="Payslips" />
                                <field name="payslip_ids" widget="one2many_list">                             
                                </field>
                            </div>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>