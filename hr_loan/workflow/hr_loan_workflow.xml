<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <!-- workflow activities -->
        <record id="wkf_hr_loan" model="workflow">
            <field name="name">hr.loan.basic</field>
            <field name="osv">hr.loan</field>
            <field name="on_create">True</field>
        </record>
        
        <record id="act_draft" model="workflow.activity">
            <field name="wkf_id" ref="wkf_hr_loan"/>
            <field name="name">draft</field>
            <field name="kind">function</field>
            <field name="action">write({'state': 'draft'})</field>
            <field name="flow_start">True</field>
        </record>

        <record id="act_confirm" model="workflow.activity">
            <field name="wkf_id" ref="wkf_hr_loan"/>
            <field name="name">confirm</field>
            <field name="kind">function</field>
            <field name="action">do_signal_confirm()</field>
        </record>

        <record id="act_paid" model="workflow.activity">
            <field name="wkf_id" ref="wkf_hr_loan"/>
            <field name="name">paid</field>
            <field name="kind">function</field>
            <field name="action">do_signal_paid()</field>
        </record>

        <record id="act_decline" model="workflow.activity">
            <field name="wkf_id" ref="wkf_hr_loan"/>
            <field name="name">decline</field>
            <field name="kind">function</field>
            <field name="action">do_signal_decline()</field>
            <field name="flow_stop">True</field>
        </record>

        <!-- Workflow transitions -->
        <record id="draft2confirm" model="workflow.transition">
            <field name="act_from" ref="act_draft"/>
            <field name="act_to" ref="act_confirm"/>
            <field name="signal">signal_confirm</field>
            <field name="group_id" ref="base.group_hr_manager"/>
        </record>

        <record id="confirm2paid" model="workflow.transition">
            <field name="act_from" ref="act_confirm"/>
            <field name="act_to" ref="act_paid"/>
            <field name="signal">signal_paid</field>
            <field name="group_id" ref="base.group_hr_manager"/>
        </record>

        <record id="confirm2decline" model="workflow.transition">
            <field name="act_from" ref="act_confirm"/>
            <field name="act_to" ref="act_decline"/>
            <field name="signal">signal_decline</field>
            <field name="group_id" ref="base.group_hr_manager"/>
        </record>

    </data>
</openerp>