<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="CustomerPopupWidget">
        <div id="customer-form" title="Customer Form">
            <table>
                <br/>
                <tr>
                    <td class="oe_form_group_cell1">
                        <label>Vat</label>
                    </td>
                    <td>
                         <div id="choice_type">
                            <input type="radio" id="opt_v" name="choice_type" value="V" checked="checked"/>
                            <label for="opt_v">V</label>
                            <input type="radio" id="opt_e" name="choice_type" value="E" />
                            <label for="opt_e">E</label>
                            <input type="radio" id="opt_j" name="choice_type" value="J" />
                            <label for="opt_j">J</label>
                            <input type="radio" id="opt_g" name="choice_type" value="G" />
                            <label for="opt_g">G</label>
                            <input type="radio" id="opt_p" name="choice_type" value="P" />
                            <label for="opt_p">P</label>
                        </div>                    
                    </td>
                    <td>
                        <input id="txtVat" type="text" class="oe_text_field" style="width:100%" placeholder=" e.g 123456789"/>                                             
                    </td>
                    <td>
                        <button id="search">search</button> 
                    </td>
                </tr>               
                <tr>
                    <td class="oe_form_group_cell1">
                         <label>VAT Legal Statement</label>                
                    </td>
                    <td>
                        <input type="checkbox" id="chk_yes"/>
                    </td>
                    <td colspan="2">
                        <label>Wh. Agent</label>
                        <input type="checkbox" id="chk_yes"/>              
                    </td>                    
                </tr>
                <tr>
                    <td class="oe_form_group_cell1">
                         <label>Name</label>                
                    </td>
                    <td colspan="3">
                        <input type="text" id="txt_name" class="oe_text_field" style="width:100%"/>
                    </td>
                </tr>
                <tr>
                    <td class="oe_form_group_cell1">
                         <label>Address</label>                
                    </td>
                    <td colspan="3">
                        <input type="text" id="txt_name" class="oe_text_field" style="width:100%" placeholder=" Av. Siempre Viva"/>
                        <input type="text" id="txt_name" class="oe_text_field" style="width:100%"/>
                        <input type="text" id="txt_name" class="oe_text_field" style="width:100%" placeholder=" Caracas"/>
                    </td>
                </tr>
                <tr>
                    <td class="oe_form_group_cell1">
                         <label>Phone</label>                
                    </td>
                    <td colspan="3">
                        <input type="text" id="txt_name" class="oe_text_field" style="width:100%" placeholder=" +58 426 3504371"/>
                    </td>
                </tr>
                <tr>
                    <td class="oe_form_group_cell1">
                         <label>Email</label>                
                    </td>
                    <td colspan="3">
                        <input type="text" id="txt_name" class="oe_text_field" style="width:100%"/>
                    </td>
                </tr>
            </table>
        </div>
    </t>        
</templates>
