<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="CustomerConfirm">
        <div id="customer-confirm" title="">
            <p>
                <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 50px 0;"></span>
                <span id="message" style="font-weight:bold"></span>   
            </p>
        </div>
    </t>
    <t t-name="CustomerPopup">
        <div id="customer-popup" title="">
            <p>
                <span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 50px 0;"></span>
                <span id="message" style="font-weight:bold"></span>   
            </p>
        </div>
    </t>
    <t t-name="CustomerPopupForm">
        <div class="modal_dialog">
            <div class="popup">
                <div class="header">
                    <span class="title">Customer Form</span>
                    <a href="#" class="close" role="button">
                        <span class="ui-icon ui-icon-closethick">close</span>
                    </a>
                </div>
                <div class="content">                    
                    <table>
                        <tr>
                            <td>
                                <label>Vat</label>
                            </td>
                            <td>
                                 <div id="choiceType">
                                    <input type="radio" id="opt_v" name="choiceType" value="V" checked="checked"/>
                                    <label for="opt_v">V</label>
                                    <input type="radio" id="opt_e" name="choiceType" value="E" />
                                    <label for="opt_e">E</label>
                                    <input type="radio" id="opt_j" name="choiceType" value="J" />
                                    <label for="opt_j">J</label>
                                    <input type="radio" id="opt_g" name="choiceType" value="G" />
                                    <label for="opt_g">G</label>
                                    <input type="radio" id="opt_p" name="choiceType" value="P" />
                                    <label for="opt_p">P</label>
                                </div>                    
                            </td>
                            <td >
                                <input id="txtVat"  name="vat" type="text" style="width:95%" t-att-value="widget.customer.get('vat')" onfocus="this.select()" placeholder="e.g 123456789"/>                                             
                            </td>
                            <td>
                                <button id="btnSearch" name="search">Search</button> 
                            </td>
                        </tr>               
                        <tr>
                            <td>
                                 <label>VAT Legal Statement</label>                
                            </td>
                            <td>
                                <input type="checkbox" t-att-checked="widget.customer.get('vat_subjected')" id="chkSt"/>
                            </td>
                            <td colspan="2">
                                <label>Wh. Agent</label>
                                <input type="checkbox" t-att-checked="widget.customer.get('wh_iva_agent')" id="chkWh"/>              
                            </td>                    
                        </tr>
                        <tr>
                            <td>
                                 <label>Name</label>                
                            </td>
                            <td colspan="3">
                                <input type="text" name="name" t-att-value="widget.customer.get('name')"  id="txtName" class="oe_text_field" style="width:100%"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                 <label>Address</label>                
                            </td>
                            <td colspan="3">
                                <input type="text" name="street" id="txtStreet" t-att-value="widget.customer.get('street')" class="oe_text_field" style="width:100%" placeholder="Av. Siempre Viva"/>
                                <input type="text" name="street2" id="txtStreet2" t-att-value="widget.customer.get('street2')"  class="oe_text_field" style="width:100%"/>
                                <input type="text" name="city" id="txtCity" t-att-value="widget.customer.get('city')" class="oe_text_field" style="width:100%" placeholder="Caracas"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                 <label>Phone</label>                
                            </td>
                            <td colspan="3">
                                <input type="text" name="phone" id="txtPhone" t-att-value="widget.customer.get('phone')" class="oe_text_field" style="width:100%" placeholder=" +58 426 3504371"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                 <label>Email</label>                
                            </td>
                            <td colspan="3">
                                <input type="text" name="email" id="txtEmail" t-att-value="widget.customer.get('email')" class="oe_text_field" style="width:100%"/>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="footer">
                    <button style="height:40px;width:110px">Cancel</button>
                    <button style="height:40px;width:110px">Save</button>                      
                </div>
            </div>
        </div>
    </t>        
</templates>
