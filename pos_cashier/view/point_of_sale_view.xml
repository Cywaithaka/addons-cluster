<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_pos_session_cashier_form">
            <field name="name">pos.session.cashier.form.view</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
            <field name="arch" type="xml">
                <field name="config_id" position="after">
                    <field name="cashier_id"/>
                </field>
                <xpath expr="//button[@name='close'][1]" position="replace">
                    <button name="close" type="object" string="Validate Closing &amp; Post Entries"
                            attrs="{'invisible' : ['|', ('cash_control', '=', True),('state', '!=', 'opened')]}"
                            class="oe_highlight" 
                    />
                </xpath>
                <xpath expr="//button[@name='close'][2]" position="replace">
                    <button name="close" type="object" string="Validate Closing &amp; Post Entries" states="closing_control"
                            class="oe_highlight" 
                    />
                </xpath>
            </field>
        </record>
    </data>
</openerp>
