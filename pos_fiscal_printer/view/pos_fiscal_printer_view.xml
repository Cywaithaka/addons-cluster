<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>       
        <record model="ir.ui.view" id="printer_tree_view">
            <field name="name">printer.tree</field>
            <field name="model">pos_fiscal_printer.printer</field>
            <field name="arch" type="xml">
                <tree string="Printer Tree">
                    <field name="name" />
                    <field name="brand" />
                    <field name="model" />
                    <field name="type" />
                </tree>
            </field>       
        </record>
        
        <record model="ir.ui.view" id="printer_form_view">
            <field name="name">printer.form</field>
            <field name="model">pos_fiscal_printer.printer</field>
            <field name="arch" type="xml">
                <form string="Session Form" version="7.0">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1><field name="name" /></h1> 
                        </div>
                        <group col="4">                                
                            <field name="brand"  placeholder="Brand"/>
                            <field name="model" 
                             domain="[('brand_id','=', brand)]" 
                             placeholder="Model"/>
                            <field name="port" placeholder="Port"/>
                            <field name="type"/>
                            <field name="serial" placeholder="Serial"/>
                            <field name="active"/>                           
                        </group> 
                        <notebook>
                            <page string="Payment Methods"></page> 
                            <page string="Tax Rates"></page>  
                            <page string="Measure Units"></page> 
                            <page string="Header and Footer"></page>                                                   
                        </notebook>                       
                    </sheet>
                </form>
            </field>       
        </record>
        
        
    </data>
</openerp>
