<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">    

    <t t-name="NotPrinterErrorPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-help">
                <div class="header">
                    <div>Printer Error</div>
                </div>
                <img src="/pos_fiscal_printer/static/src/img/printer.jpg" />
                <p class="message">Do not set any fiscal printer. Unable to start the POS</p>
                <div class="footer">
                    <div class="button">
                        Close
                    </div>
                </div>
            </div>
        </div>
    </t>
    <t t-name="PrinterErrorPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-help">
                <div class="header">
                    <div>Printer Error</div>
                </div>
                <img src="/pos_fiscal_printer/static/src/img/printer.jpg" />
                <p class="message">
                    <t t-esc="widget.message"/>
                </p>
                <div class="footer">
                    <div class="button close">
                        Close
                    </div>
                    <div class="button retry">
                        Retry
                    </div>                    
                </div>
            </div>
        </div>
    </t>
    <t t-name="PrintErrorPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-help">
                <div class="header">
                    <div>Print Error</div>
                </div>
                <img src="/pos_fiscal_printer/static/src/img/printer.jpg" />
                <p class="message">
                    <t t-esc="widget.message"/>
                </p>
                <div class="footer">
                    <div class="button close">
                        Close
                    </div>                   
                </div>
            </div>
        </div>
    </t>
    
</templates>
