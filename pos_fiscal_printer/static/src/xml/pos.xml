<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">    
    <t t-name="CustomernameWidget">
        <span class="customername">
            <t t-esc="widget.get_name()" />
        </span>
    </t>
    <t t-name="CustomerListWidget">
        <div class='customer-list-container'>
            <div class="customer-list-scroller">
                <ol id="customers-screen-ol" class="customer-list">
                </ol>
            </div>
        </div>
    </t>

    <t t-name="SelectCustomerPopupWidget">
        <div class="modal-dialog">
            <div class="popup-selection">
                <div class="customer-title">
                    Customer Selection
                </div>

                <div class="customer-searchbox">
                    <input placeholder="Search Customers" />
                    <img class="customer-search-clear" src="/point_of_sale/static/src/img/search_reset.gif" />
                </div>

                <div class="content-container">
                    <span class="placeholder-CustomerListWidget" />
                </div>

                <div id="customer-cancel" class = "button cancel">
                    Cancel
                </div>
            </div>
        </div>
    </t>
    
    <t t-name="CustomerWidget">
        <li class='customer'>
            <a href="#">
                <span class="customer-field customer-name">
                    <t t-esc="widget.model.get('name')"/>
                </span>
                <span class="customer-field">
                    <t t-if="widget.model.get('vat')">
                        <t t-esc="widget.model.get('vat')"/>
                    </t>
                </span>
                <span class="customer-field">
                    <t t-if="widget.model.get('email')">
                        <t t-esc="widget.model.get('email')"/>
                    </t>
                </span>
                <span class="customer-field customer-phone">
                    <t t-if="widget.model.get('phone')">
                        <t t-esc="widget.model.get('phone')"/>
                    </t>
                </span>
                <span class="customer-field customer-phone">
                    <t t-if="widget.model.get('mobile')">
                        <t t-esc="widget.model.get('mobile')"/>
                    </t>
                </span>
            </a>
        </li>
    </t>
</templates>
